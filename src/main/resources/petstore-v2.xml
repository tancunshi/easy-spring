<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="zoo" class="org.easyspring.entity.Zoo">
        <property name="dog" ref="dog"/>
        <property name="zooName" value="crazy"/>
    </bean>
    <bean id="dog" class="org.easyspring.entity.Dog">
        <property name="dogName" value="puppy"/>
        <property name="dogAge" value="6"/>
        <property name="weight" value="1024.0"/>
        <property name="female" value="true"/>
    </bean>
</beans>